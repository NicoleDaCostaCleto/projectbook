{% extends 'base.html.twig' %}

{% block title %}
    <title>Liste authors</title>
{% endblock %}

{% block header%}
    <header class="main-menu">
        <ul class="nav-items">
            <li class="nav-item"><a class="nav-link" href="{{ path('home') }}">Home</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('list_books') }}">Books</a></li>
            <li class="nav-item"><a class="nav-link" href="{{ path('list_authors') }}">Authors</a></li>
        </ul>
    </header>
{% endblock %}

{% block main %}
    <h2>Liste Authors</h2>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                {% for author in authors %}
                    <div class="authors">
                        <h2>{{author.lastName}}</h2>
                        <p> {{ author.firstName}}</p>
                        <p>Auteur n√©(e) le: {{ author.birthDate | date('d-m-Y') }}</p>
                        {% if author.deathDate is not null %}
                            <p>Auteur mort le: {{ author.deathDate | date('d-m-Y') }}</p>
                        {% endif %}
                    <a class="btn" href="{{path('show_author', {'id':author.id}) }}">Voir l'auteur</a>
                    </div>
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
