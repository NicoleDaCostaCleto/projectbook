{% extends 'admin/base.html.twig' %}

{% block title %}
    <title>{{ book.title }}</title>
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="book">
                    <h2>{{ book.title }}</h2>
                    <p>Nombre de pages : {{ book.nbPages }}</p>
                    <img src="{{ asset('uploads/images/' ~ book.image) }}" alt="" height="200vh">
                    <p>Publi√© le : {{ book.publishedAt | date('d-m-Y') }}</p>
                    {% if book.author is not null %}
                        auteur :<a href="{{ path('admin_show_author', {'id' : book.author.id}) }}">{{ book.author.firstName }} {{ book.author.lastName }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}